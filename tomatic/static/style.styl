body {
	color: #511;
	background-color: #eee;
}
body.pe-dark-theme {
	color: #bbb;
	background-color: #242;
}
body, html, #tomatic {
	height: 100%;
	margin: 0;
	padding: 0;
}

#tomatic.main.main.main { // to overwrite defaut styles

.pe-header-panel__header-container {
	background-color: #522;
}
.pe-header-panel__header-background {
	background-image: url(./autentico-tomatic-exposicion-del-club-super.jpg);
}

.pe-toolbar .pe-icon,
.pe-toolbar .pe-button--icon,
.pe-toolbar
{
	background-color: transparent;
	color: #aaa;
}
.pe-header-panel__media-dimmer {
	box-shadow: inset 0px 0px 200px rgba(0,0,0,.6);
}
.pe-toolbar.pe-header--tall {
	height: 102px;
}
.main .pe-button-icon {
	color: red;
}

.uploader {
	display: inline-block
	position: relative
	overflow: hidden
	margin: 9px
	text-align: right
}
.uploader input[type=file] {
	position: absolute;
	top: 0;
	right: 0;
	margin: 0;
	padding: 0;
	font-size: 20px;
	cursor: pointer;
	opacity: 0;
}
.weeks {
	display: inline-block;
	width: 100%;
	min-width: 50%;
}
.week {
	cursor: pointer;
	text-align: center;
	padding: 3px;
	color: black;
	background: #ccc;
}
.week:hover {
	background: #bcb;
}
.week.current, .week.current:hover {
	font-weight: bold;
	background: #7a7;
}
.week.current:before {
	content: "►";
}
.week.current:after {
	content: "◄";
}

.graella td, .graella th {
	border:1px solid black;
	width: 8em;
	text-align: center;
}
.graella th {
	color: black;
	background: white;
}
.graella td:empty,
.graella td:hover:empty {
	border: none;
	background: none;
	cursor: inherit;
}
.graella td {
	position: relative; /* Ripple needs it */
	padding: 1ex;
	cursor: pointer;
}
.graella td:hover {
	opacity: .9;
}
.graella td .tooltip {
	visibility: hidden;
	display: block;
	position: absolute;
	padding: 2px;
	right: 1pt; /* border */
	bottom: 70%; /* border */
	background: inherit;
	border: inherit;
	border-radius: 5px;
}
.graella td:hover .tooltip {
	visibility: visible;
	opacity: 1;
}
.graella .separator {
	background: #ddd;
	border: none;
}
.queueeditor {
	margin-left: auto;
	margin-right: auto;
	text-align:center;
}
.queueitem {
	color: black;
	width: 10em;
	text-align: center;
	display: inline-block;
	padding: 1em;
	border: 2pt solid;
	margin: 2pt;
	cursor: pointer;
}
.queueitem.paused,
.pe-dark-theme .queueitem.paused
 {
	color: red;
	text-decoration: line-through;
	background-color: #fee;
	border-color: red;
}
.queueitem:hover {
	opacity: .8;
}
.queueitem.add {
	font-weight: bold;
	border: 2pt dashed #aae;
	color: #aae;
	background-color: #ddf;
}
.pe-dark-theme .queueitem.add {
	color: inherit;
	border-color: inherit;
	background-color: #454;
}
.queueitem.add:hover {
	opacity: 0.8;
}
.extensions {
	width: 90%;
	text-align: center;
	margin-left: auto;
	margin-right: auto;
}
.extension {
	color: black;
	display: inline-block;
	padding: 1ex 0ex;
	width: 14%;
	text-align: center;
	margin: 2pt 2pt;
	border: 1pt solid black;
	min-width: 5em;
	cursor: pointer;
}
dialog .extension {
	color: black;
	padding-top: 1ex;
	width: 10%;
}
dialog .extension:hover {
	opacity: .8;
}
.graella {
	vertical-align: top;
	text-align: center;
	display: inline-block;
	margin: 4px;
}
.festiu {
	color: red;
	border: red 1pt solid;
}
.changelog {
	text-align: left;
}
.penalties {
	text-align: left;
}
.codes {
	text-align: left;
}

#snackbar {
    position: fixed;
    bottom: 0;
    width: 100%;
    margin: 0 auto;
}

#snackbar .error {
	color: #fff;
	background-color: #e44;
	border: 1pt solid #faa;
	border-bottom: none;
}


} // End of overwrite
